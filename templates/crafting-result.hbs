<div class="pf2e chat-card" data-heroic-crafting-progress="{{progressString}}" data-project-uuid="{{projectUuid}}", data-actor="{{actor}}">
    <div class="card-buttons">
        {{#if progress}}
            <button type="button" data-action="progress-heroic-crafting-project" class="heroic-crafting-progress-chat-button">{{localize "PF2E-HEROIC-CRAFTING-AUTOMATION.CraftingResult.Progress" progress=progressString}}</button>
        {{else}}
            <button type="button" data-action="ruin-heroic-crafting-project" class="heroic-crafting-progress-chat-button">{{localize "PF2E-HEROIC-CRAFTING-AUTOMATION.CraftingResult.Deduct" progress=progressString}}</button>
        {{/if}}
    </div>
</div>